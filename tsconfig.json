{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    
    // âœ… Add this:
    "esModuleInterop": true     // Allows default imports from CommonJS modules (needed for packages like express, morgan, etc.)
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
